<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.example.rishabh.meddela.AddTimeTable">


    <!--android:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
    <!--android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"-->


    <LinearLayout

        android:id="@+id/addttselectclassview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/addttselectclassheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="SELECT CLASS"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addttselectclassheading"
            android:layout_marginTop="16dp"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/addttSpinnerBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

            <Spinner
                android:id="@+id/addttSpinnerSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

            <Spinner
                android:id="@+id/addttSpinnerYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />
        </LinearLayout>

        <Button
            android:id="@+id/addttproceedbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_bg_white"
            android:padding="15dp"
            android:text="Proceed"
            android:textColor="@color/btn_text_white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/addttsubteacherview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:alpha="0"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/addttuserselectedclasstextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            tools:text="EC - B | 4th Year" />

        <Spinner
            android:id="@+id/addttSpinnerDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">


            <GridLayout

                android:id="@+id/addttgridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:columnCount="3">

                <TextView
                    android:layout_column="0"
                    android:layout_row="0"
                    android:padding="15dp"
                    android:text="Sr. No."
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:padding="15dp"
                    android:text="Subject"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="2"
                    android:layout_row="0"
                    android:padding="15dp"
                    android:text="Teacher"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="1"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="2"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="3"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="4"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="4"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="5"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="5"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="6"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="6"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="7"
                    android:padding="5dp"
                    android:paddingEnd="16dp"
                    android:text="7"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/sub1"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <EditText
                    android:id="@+id/sub2"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <EditText
                    android:id="@+id/sub3"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <EditText
                    android:id="@+id/sub4"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <EditText
                    android:id="@+id/sub5"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <EditText
                    android:id="@+id/sub6"
                    android:layout_column="1"
                    android:layout_row="6"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <EditText
                    android:id="@+id/sub7"
                    android:layout_column="1"
                    android:layout_row="7"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="4"
                    android:inputType="textCapWords"
                    android:maxEms="7"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />


                <AutoCompleteTextView
                    android:id="@+id/tea1"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:backgroundTint="@color/lighgrey"
                    android:dropDownWidth="wrap_content"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <AutoCompleteTextView
                    android:id="@+id/tea2"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <AutoCompleteTextView
                    android:id="@+id/tea3"
                    android:layout_column="2"
                    android:layout_row="3"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <AutoCompleteTextView
                    android:id="@+id/tea4"
                    android:layout_column="2"
                    android:layout_row="4"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <AutoCompleteTextView
                    android:id="@+id/tea5"
                    android:layout_column="2"
                    android:layout_row="5"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <AutoCompleteTextView
                    android:id="@+id/tea6"
                    android:layout_column="2"
                    android:layout_row="6"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />

                <AutoCompleteTextView
                    android:id="@+id/tea7"
                    android:layout_column="2"
                    android:layout_row="7"
                    android:backgroundTint="@color/lighgrey"
                    android:ems="5"
                    android:inputType="textCapCharacters"
                    android:maxEms="5"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/lighgrey" />


            </GridLayout>


            <Button
                android:id="@+id/addttupdatebtn"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_alignEnd="@+id/addttgridview"

                android:layout_below="@+id/addttgridview"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_bg_white"
                android:text="Update"
                android:textColor="@color/btn_text_white" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
